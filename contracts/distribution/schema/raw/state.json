{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "State",
  "type": "object",
  "properties": {
    "admin": { "type": "string" },
    "balances": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "address": { "type": "string" },
          "balance": { "type": "integer" }
        },
        "required": ["address", "balance"]
      }
    }
  },
  "required": ["admin", "balances"]
}
